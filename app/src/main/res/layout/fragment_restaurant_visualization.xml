<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.lacochina.RestaurantVisualization">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/nameRestTextField"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginStart="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/addressTextField"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/nameRestTextField"
        android:layout_alignStart="@+id/nameRestTextField" />

    <TextView
        android:text="Reputation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/repTextField"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/telTextField"
        android:layout_alignStart="@+id/telTextField" />

    <TextView
        android:text="Telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/telTextField"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/typeTextField"
        android:layout_alignStart="@+id/addressTextField" />

    <TextView
        android:text="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/typeTextField"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/addressTextField"
        android:layout_alignStart="@+id/addressTextField" />

    <TextView
        android:text="Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/delTextField"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/repTextField"
        android:layout_alignStart="@+id/repTextField" />

    <Button
        android:text="Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delTextField"
        android:layout_toEndOf="@+id/typeTextField"
        android:layout_marginTop="20dp"
        android:id="@+id/button7" />

    <Button
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:layout_marginStart="36dp"
        android:id="@+id/button8" />

</RelativeLayout>
